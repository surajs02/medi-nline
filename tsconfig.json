{
	"compilerOptions": {
		"module": "commonjs",
		"allowJs": true,
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true, // Enable all strict type-checking options.
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"inlineSources": true, // One file.
		"removeComments": true,
	},
	"include": [
        "src/**/*"
    ],
	"exclude": [
		"node_modules/*",
		"build/*",
	],
}
